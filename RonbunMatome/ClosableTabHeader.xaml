<UserControl x:Class="RonbunMatome.ClosableTabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RonbunMatome"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="100"
             x:Name="root">
    <Grid>
        <Button Name="CloseButton" Background="Transparent" BorderThickness="0" Content="✕" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,0,0" Padding="0,0,0,0" ToolTip="Close" VerticalAlignment="Center" Width="15"></Button>
        <Label Name="Title" Height="15" HorizontalAlignment="Left" Margin="0,0,20,0" Padding="0,0,0,0" Content="Label"></Label>
    </Grid>
</UserControl>
